<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextHeader">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="TextMain">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="TextBody">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="TextCaption">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_color_caption</item>
    </style>

    <style name="TextTiny">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_color_caption</item>
    </style>

    <style name="InputLayoutBase" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/input_layout_hint_color</item>
        <item name="helperTextEnabled">true</item>
        <item name="boxBackgroundColor">@color/input_layout_box_background_color</item>
        <item name="helperTextTextColor">@color/input_layout_helper_text_color</item>
        <item name="boxStrokeColor">@color/accent</item>
    </style>

    <style name="InputBase">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>