<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextHeader">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="TextMain">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="TextCaption">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_color_caption</item>
    </style>

    <style name="TextTiny">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_color_caption</item>
    </style>

    <style name="InputLayoutBase" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/primary</item>
        <item name="android:background">@null</item>
        <item name="boxBackgroundMode">none</item>
        <item name="helperTextEnabled">true</item>
        <item name="boxBackgroundColor">@color/yellow_orange</item>
        <item name="helperTextTextColor">@color/font_color_caption</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="InputBase">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>